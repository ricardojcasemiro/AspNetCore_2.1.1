@model SignInVM

@{
    //Aqui por conta do Razor usa código C# normal
    // Exemplo:  var teste = ViewData.ModelState;
}

<h2>Autenticação</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label>email</label>
        @*<input type="email" name="email" class="form-control" autofocus/> <!--usando Html5-->*@
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", autofocus = "" }) @*<!--usando HtmlHelper-->*@
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Senha</label>
        @*<input type="password" name="senha" class="form-control"/>*@
        <input type="password" asp-for="Senha" asp class="form-control" /> @*<!--usando TagHelper-->*@
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>

    <div>
        <button class="btn btn-outline btn-info" type="submit">Acessar</button>
        @*<a class="btn btn-outline btn-warning"href="/">Cancelar</a>*@
        @*@Html.ActionLink("Cancelar", "Index", "Home", new { },new { @class = "btn btn-outline btn-warning" })*@
        <a class="btn btn-outline btn-warning" asp-controller="Home" asp-action="Index">Cancelar</a>

    </div>
</form>

@section scripts { 
    <script src="~/js/jquery.validate.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.js"></script>
}